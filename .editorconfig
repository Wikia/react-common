root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120 # Vim

[Makefile]
indent_style = tab

[**.{json,yml,svg}]
indent_style = space
indent_size = 2

[**.scss]
indent_style = tab
indent_size = tab

[{.eslintrc,.stylelintrc}]
indent_style = space
indent_size = 2
